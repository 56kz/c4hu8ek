<div class="container">
  <div class="row">
    <div class="col-sm-6 col-sm-offset-3">
      <h1>Nuevo Pin</h1>

      <%= form_for @pin do |f| %>
        <div class="form-group">
          <%= f.text_field :title, class: "form-control input-lg", placeholder: "Ingresa el título" %>
        </div>
        <div class="form-group">
          <%= f.text_area :description, class: "from-control input-lg", placeholder: "Ingresa la descripción" %>
        </div>

        <div class="action">
          <%= f.submit class: "btn btn-primary" %>
        </div>
      <% end %>
    </div>
  </div>
</div>